@if(Context.User.Identity.Name != null){
    <form class="navbar-right" asp-controller="User" asp-action="LogOut" method="post" id="logoutForm">
        <ul class="nav navbar-nav navbar-right">
            <li><a class="nav-link" asp-controller="User" asp-action="Index"> Hello @Context.User.Identity.Name</a></li>
            <li><button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button></li>
        </ul>
    </form>
}
else{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-dark" asp-controller="User" asp-action="Registration">Register</a></li>
        <li><a class="nav-link text-dark" asp-controller="User" asp-action="Login">Log in</a></li>
    </ul>
}